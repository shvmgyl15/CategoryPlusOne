<?xml version="1.5" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bb.shivam.categoryplusone.AdminActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="5dp">

    <Button
        android:id="@+id/bAddCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add Category"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bAddSubCategory"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/bAddSubCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add Sub-Category"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/bAddProduct"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/tvAddOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Options"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/bAddCategory"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/bAddProduct"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add Product"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/tvModifyOptions"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/tvModifyOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modify Options"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/bModifyCategoryName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/bModifyCategoryName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Modify Category Name"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/bModifyProduct"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/bModifyProduct"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Modify Product"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/tvRemoveOptions"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/tvRemoveOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Options"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/bRemoveCategory"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/bRemoveCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Remove Category"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/bRemoveProduct"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/bRemoveProduct"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Remove Product"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="78dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />
</android.support.constraint.ConstraintLayout>
